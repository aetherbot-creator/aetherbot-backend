              "mode": "raw",
              "raw": "{\n  \"walletAddress\": \"{{testWallet}}\",\n  \"balance\": 1000,\n  \"reason\": \"Balance correction after audit\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/set-balance",
              "host": ["{{baseUrl}}"],
